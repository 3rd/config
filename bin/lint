#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

# export ESLINT_USE_FLAT_CONFIG=false

LINTED=0

if [ -f "go.mod" ]; then
  TARGET="${1:-./...}"
  golangci-lint run --enable-all --exclude-use-default -e "ALL_CAPS" -e "cuddled" -e "SA9004" -e "a blank import should" "$TARGET"
  exit
fi

if [ -f "package.json" ]; then
  TARGET="${1:-.}"
  if [ -d "$TARGET/src" ]; then
    TARGET="$TARGET/src"
  fi
  echo "Linting $TARGET"
  ESLINT_USE_FLAT_CONFIG=false ~/brain/core/linter/eslint/node_modules/eslint/bin/eslint.js -c ~/.config/nvim/linters/eslint/dist/main.js --no-eslintrc "$TARGET" --fix
  # ~/brain/core/linter/eslint/node_modules/eslint/bin/eslint.js -c ~/.config/nvim/linters/eslint/dist/main.js --no-eslintrc "$TARGET"
  LINTED=1
fi

if [ -f "tsconfig.json" ]; then
  echo "Checking types..."
  npx tsc --noEmit
  LINTED=1
fi

if [ "$LINTED" -eq 0 ]; then
  echo "FATAL: Unknown project type."
fi
