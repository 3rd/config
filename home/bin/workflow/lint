#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

if [ -f "go.mod" ]; then
  TARGET="${1:-./...}"
  golangci-lint run --enable-all --exclude-use-default -e "ALL_CAPS" -e "cuddled" -e "SA9004" -e "a blank import should" "$TARGET"
fi

if [ -f "package.json" ]; then
  TARGET="${1:-.}"
  if [ -d "$TARGET/src" ]; then
    TARGET="$TARGET/src"
  fi
  echo "Linting $TARGET"
  ~/brain/core/linter/eslint/node_modules/eslint/bin/eslint.js -c ~/brain/config/home/dotfiles/nvim/linters/eslint/dist/main.js --no-eslintrc "$TARGET"
fi

if [ -f "tsconfig.json" ]; then
  echo "Checking types..."
  npx tsc --noEmit
fi

echo "FATAL: Unknown project type."
