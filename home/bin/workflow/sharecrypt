#!/usr/bin/env bash
set -uf -o pipefail
IFS=$'\n\t'

TMPFILE=$(mktemp /tmp/sharecrypt.XXXXXX)
cat - | openssl enc -e -aes-256-cbc -a -salt --pbkdf2 >"$TMPFILE"

linx-client "$TMPFILE"
CLIPBOARD_TEXT=$(xclip -o -selection clipboard)

echo "curl -s $CLIPBOARD_TEXT | openssl enc -d -aes-256-cbc -a -salt -pbkdf2"
